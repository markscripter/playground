mixin list(data)
  if data
    ul.list
      each item in data.items
        li(class=(item.children ? 'had-children' : ''))
          if item.link
            a(href="#{item.link.href}" target="(item.link.target ? item.link.target : '_self')") #{item.text}
          else
            #{item.text}
          if item.children
            +list(item.children)
